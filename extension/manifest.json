{
  "manifest_version": 3,
  "name": "MoMo Payment Extractor",
  "version": "1.0.0",
  "description": "Trích xuất thông tin thanh toán từ trang MoMo và gửi đến React app",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "tabs",
    "webNavigation",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://payment.momo.vn/*",
    "https://applinks.momo.vn/*",
    "http://localhost:4104/*",
    "http://localhost:4105/*",
    "file:///*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "momo_mobile_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://payment.momo.vn/*",
        "file:///*"
      ],
      "js": ["config.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MoMo Payment Extractor"
  }
}

